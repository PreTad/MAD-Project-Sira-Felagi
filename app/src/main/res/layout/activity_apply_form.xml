<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F7F5FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="54dp"
            android:background="#40189D">

            <TextView
                android:id="@+id/companyTopText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highspeed Studios"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/positionTopText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senior Software Engineer"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="6dp" />

            <ImageView
                android:id="@+id/headerLogo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="end"
                android:src="@drawable/building_header"
                android:layout_marginTop="-60dp" />
        </LinearLayout>

        <!-- Main Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Back Arrow + Title -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/backButton"-->
                    <!--                        android:layout_width="40dp"-->
                    <!--                        android:layout_height="40dp"-->
                    <!--                        android:src="@drawable/ic_back"-->
                    <!--                        android:padding="10dp" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apply Form"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginStart="10dp" />
                </LinearLayout>

                <!-- Upload Resume Box -->
                <LinearLayout
                    android:id="@+id/uploadResumeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/dashed_border"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:text="+ Upload Resume"
                        android:textColor="#6D6D6D"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_upload"
                        android:layout_marginStart="10dp" />
                </LinearLayout>

                <!-- Full Name Input -->
                <EditText
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/input_background"
                    android:paddingHorizontal="20dp"
                    android:hint="Full name"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:textColor="#000"
                    android:textColorHint="#999" />

                <!-- Email Input -->
                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/input_background_stroke"
                    android:paddingHorizontal="20dp"
                    android:hint="Email address"
                    android:layout_marginTop="18dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textColorHint="#999"
                    android:inputType="textEmailAddress"/>

                <!-- Phone Number Input -->
                <EditText
                    android:id="@+id/phoneInput"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/input_background"
                    android:paddingHorizontal="20dp"
                    android:hint="Phone number"
                    android:layout_marginTop="18dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textColorHint="#999"
                    android:inputType="phone"/>

                <!-- Apply Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="28dp"
                    android:text="APPLY JOB"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="40dp"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#40189D" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>